/*==========================================================
General Tag Styles
==========================================================*/
html
    height 100%
    width 100%
    overflow hidden

body
    position relative
    height 100%
    width 100%
    overflow auto
    background-color cd-background
    color cd-foreground
    font-family: Arial, Helvetica, sans-serif
    text-align: center
    font-size: 12pt
    
h1
    font-size: 17pt
h2
    font-size: 15pt
p
    font-size: 12pt
